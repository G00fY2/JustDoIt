<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      android:layout_marginStart="16dp"
      android:layout_marginTop="16dp"
      android:orientation="horizontal"
      >
    <ImageView
        android:id="@+id/league_position_profile_imageview"
        android:layout_width="56dp"
        android:layout_height="56dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        >
      <TextView
          android:id="@+id/league_position_profile_textview"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="8dp"
          android:text="Summoner"
          android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
          />
    </LinearLayout>
  </LinearLayout>

  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="4dp"
      android:layout_marginStart="16dp"
      android:orientation="vertical"
      >

    <TextView
        android:id="@+id/league_position_league_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        tools:text="Gold"
        />
    <TextView
        android:id="@+id/league_position_league_name_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Vis Orakel"
        />

  </LinearLayout>

  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="16dp"
      android:layout_marginStart="12dp"
      android:orientation="horizontal"
      >
    <android.support.v7.widget.CardView
        android:id="@+id/league_position_division_1_cardview"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="4dp"
        android:layout_weight="1"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        >
      <TextView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:gravity="center"
          android:text="I"
          android:textAlignment="center"
          />
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/league_position_division_2_cardview"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="4dp"
        android:layout_weight="1"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        >
      <TextView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:gravity="center"
          android:text="II"
          android:textAlignment="center"
          />
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/league_position_division_3_cardview"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="4dp"
        android:layout_weight="1"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        >
      <TextView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:gravity="center"
          android:text="III"
          android:textAlignment="center"
          />
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/league_position_division_4_cardview"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="4dp"
        android:layout_weight="1"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        >
      <TextView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:gravity="center"
          android:text="IV"
          android:textAlignment="center"
          />
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/league_position_division_5_cardview"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="4dp"
        android:layout_weight="1"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        >
      <TextView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:gravity="center"
          android:text="V"
          android:textAlignment="center"
          />
    </android.support.v7.widget.CardView>
  </LinearLayout>

  <android.support.v7.widget.RecyclerView
      android:id="@+id/league_position_recyclerview"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:scrollbars="vertical"
      >

  </android.support.v7.widget.RecyclerView>

</LinearLayout>